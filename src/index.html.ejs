<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="UTF-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
        <title>Redmien Excel Connector</title>
    </head>
    <body>
        <div id="root"></div>
        <%
            var ST = '<%';
            var ET = '%';
        %>

        <%
            ET += '>';
        %>

        <%=ST%> if User.current.logged?
        <%=ET%>
            <script>
            var RX__CurrentUser = <%=ST%>=current_user.to_json.html_safe<%=ET%>;
            </script>
        <%=ST%>
        end
        <%=ET%>

    <script>
        var RX__LANG = <%=ST%>={
            :login => l(:label_login), 
            :logout => l(:label_logout),
            :project => l(:label_project),
            :projects => l(:label_project_plural),
            :label_filter_plural => l(:label_filter_plural),
            :query => l(:label_query),
            :day_plural => l(:label_day_plural),
            :field_column_names => l(:field_column_names),
            :button_load => l(:button_load),
            :button_load_and_merge => l(:button_load_and_merge),
            :button_save => l(:button_save),
            :label_project_all => l(:label_project_all),
            :confirm_overload => l(:confirm_overload),
            :label_sort => l(:label_sort),
            :label_ascending => l(:label_ascending),
            :label_descending => l(:label_descending),
            :error_complete_value => l(:error_complete_value)
        }.to_json.html_safe<%=ET%>;
    </script>

    </body>
</html>
